<Page x:Class="WpfBankClient.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfBankClient.Pages"
      mc:Ignorable="d"
      Title="HistoryPage">

    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="AccountLabel" Content="History of Account: " />
        <DataGrid Grid.Row="1" x:Name="HistoryDataGrid" Width="Auto" VerticalAlignment="Stretch" ItemsSource="{Binding}" />
    </Grid>
</Page>