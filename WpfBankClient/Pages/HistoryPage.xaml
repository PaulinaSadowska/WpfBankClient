<Page x:Class="WpfBankClient.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfBankClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="HistoryPage">

    <Grid>
        <Grid>
            <Button x:Name="GetHistoryButton" Content="Get History" HorizontalAlignment="Left" Margin="215,13,0,0" VerticalAlignment="Top" Width="75" Click="GetHistoryButton_Click" />
            <Label x:Name="AccountLabel" Content="Account number:" HorizontalAlignment="Left" Margin="12,10,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="AccountTextBox"  Height="23" Margin="116,10,90,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <DataGrid x:Name="HistoryDataGrid" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Height="249" Width="280" ItemsSource="{Binding}"/>
        </Grid>
    </Grid>
</Page>
