<Page x:Class="WpfBankClient.Pages.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfBankClient"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LogInPage">

    <Grid>
        <Button x:Name="LogInButton" Content="Log In" HorizontalAlignment="Left" Margin="201,233,0,0" VerticalAlignment="Top" Width="75" Click="LogInButton_OnClick"/>
        <Label x:Name="LoginLabel" Content="Login:" HorizontalAlignment="Left" Margin="33,90,0,0" VerticalAlignment="Top"/>
        <Label x:Name="PasswordLabel" Content="Password" HorizontalAlignment="Left" Margin="33,137,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LoginTextBox"  Height="23" Margin="137,90,43,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="23" Margin="137,137,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Page>
